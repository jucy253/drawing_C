#include <stdio.h>

/* Right triangle and isosceles with size 5* */

int i, j;

int main(){
printf("Ve tam giac vuong can:\n");

// *
// * *
// * * *
// * * * *
// * * * * *

for (i = 1; i <= 5; i++){
        for (j = 1; j <=5; j++){
            if(j <= i){
                printf("* ");
            }
        }
        printf("\n");
    }
    
 // * * * * *
 // * * * *
 // * * *
 // * *
 // *
 
 for (i = 1; i <= 5; i++){
        for (j = 1; j <= 5; j++){
            if (i <= j){
                printf("* ");
            }
        }
        printf("\n");
    }
 
 // * * * * *
 //.  * * * *
 //     * * *
 //       * *
 //.        *
 
 for(i = 1; i<= 5; i++){
        for(j = 1; j<= 5; j++){
            if(j<i){
                printf("  ");
            }
            else{
                printf("* ");
            }
        }
        printf("\n");
    }
    
  //         *
  //       * *
  //     * * *
  //   * * * *
  // * * * * *
  
  for(i = 1; i<= 5; i++){
        for(j = 1; j<= 5; j++){
            if(j>(5-i)){
                printf("* ");
            }
            else{
                printf("  ");
            }
        }
        printf("\n");
  }
    
    /* equilateral triangle with size 5* */
  //      * 
  //     * * 
  //    * * * 
  //   * * * * 
  //  * * * * * 
  
  printf("Ve tam giac sao deu:\n");
   for(i = 1; i <= 5; i++) {
      for(j = 1; j <= 5-i; j++) 
      if(j <= i){
         printf(" ");
      }
      else{
         printf("* ");
      }
      printf("\n");
   }
   
  // * * * * * 
  //  * * * * 
  //   * * * 
  //    * * 
  //     * 
  
  printf("Ve tam giac sao deu:\n");
    for(i = 1; i <= 5; i++) {
        for(j = 1; j <= 5; j++) 
        if(j >= i){
            printf("* ");
        }
        else{
            printf(" ");
        }
        printf("\n");
    }
   
    return 0;
}
